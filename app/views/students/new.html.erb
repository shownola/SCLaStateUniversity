<% if @student.errors.any? %>
<div class="container">
  <div class="row sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel red lighten-2">
        <span class="white-text"><strong><%= pluralize(@student.errors.count, 'error') %>
        prohibited your profile from being created</strong>

        <ul>
          <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
        </span>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
          <h3 class="header">Sign Up</h3>
        <div class="row">
          <%= form_for(@student, html: { class: "col s12" }) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name, placeholder: 'Enter your full name', autofocus: true %>
                <%= f.label :name %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :email, placeholder: 'Enter your email address' %>
                <%= f.label :email %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.submit "Sign Up", class: 'btn sign-up-btn waves-effect waves-dark light-blue darken-4 btn-large grey-text' %>
              </div>
            </div>
              <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
