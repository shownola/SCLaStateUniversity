
<div class="row sign-up-form">

    <div class="col s6 m6">
      <div class="card light-blue darken-3">
        <div class="card-content white-text">
          <span class="card-title">Name: <%= @student.name.capitalize %></span>
          <span class="card-title">Email: <%= @student.email %></span>
          <h5 class="flow-text">Course Enrollments:</h5>
          <p>
            <% if @student.courses.empty? %>
              None
            <% else %>
            <ul>
              <% @student.courses.each do |course| %>

              <li><%= course.name %></li>
            <% end %>
            </ul>
          <% end %>
          </p>
        </div>
      </div>
      <% if current_user == @student %>
        <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe, edit_student_path(@student), class: 'waves-effect waves-light btn' %>
      <% end %>
    </div>
</div>
